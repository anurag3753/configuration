[user]
  name            = Anurag Modi
  email           = anuragmodi@mycompany.com
  username        = anuragmodi
[core]
	gitproxy        = /home/anuragmodi/git_proxy
[http]
	postBuffer      = 512M
	sslVerify       = true
[color]
  ui              = auto
[color "branch"]
  current         = yellow reverse
  local           = yellow
  remote          = green
[color "diff"]
  meta            = yellow bold
  frag            = magenta bold
  old             = red bold
  new             = green bold
  whitespace      = red reverse
[color "status"]
  added           = yellow
  changed         = green
  untracked       = red
[diff]
  tool            = vimdiff
[push]
  default         = matching
[sendemail]
  from            = "Anurag Modi <anuragmodi@mycompany.com>"
  smtpserver      = smtp.mycompany.com
  bcc             = nofooter@mycompany.com
  confirm         = auto
[core]
  editor          = vim
  whitespace      = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile    = ~/.gitignore
[alias]
  graph           = log --graph --all --pretty=format:\"%h%d%x09%an%x09%ai%x09%s\"
  co              = checkout
  cob             = checkout -b
  br              = branch
  st              = status
  cm              = commit -s
  unstage         = reset --soft HEAD^
